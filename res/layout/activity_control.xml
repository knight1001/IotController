<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <RelativeLayout style="@style/TopbarLayout" >

        <ImageView
            android:id="@+id/device_list_btn"
            style="@style/TopbarButton"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_dev_list" />

        <ImageView
            android:id="@+id/search_btn"
            style="@style/TopbarButton"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/config_btn"
            android:src="@drawable/ico_search" />

        <ImageView
            android:id="@id/config_btn"
            style="@style/TopbarButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_config" />
    </RelativeLayout>

    <GridView
        android:id="@+id/command_grid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/config_margin"
        android:cacheColorHint="#00000000"
        android:columnWidth="0dp"
        android:fadeScrollbars="true"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="0dp"
        android:fastScrollEnabled="false"
        android:horizontalSpacing="10dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="auto_fit"
        android:scrollbars="vertical"
        android:smoothScrollbar="true"
        android:stretchMode="columnWidth"
        android:verticalSpacing="20dp" />

</LinearLayout>