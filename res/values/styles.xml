<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Theme.Activity">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="TopbarLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/topbar_bg</item>
    </style>
    
    <style name="TopbarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    
    <style name="TopbarText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/topbar_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ConfigLayout">
        <item name="android:layout_marginLeft">@dimen/config_padding</item>
        <item name="android:layout_marginRight">@dimen/config_padding</item>
        <item name="android:minHeight">@dimen/config_item_height</item>
    </style>
    
    <style name="ConfigText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/config_text_size</item>
    </style>
    
    <style name="ConfigText.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConfigText.Content">
        <item name="android:layout_marginLeft">@dimen/config_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
    </style>
    
</resources>